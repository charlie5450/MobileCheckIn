@page
@model MobileCheckIn.Pages.AdditionalModel
@{
}

@{
    ViewData["Title"] = "추가정보 입력";
}

<h2>추가정보 입력</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="LastName">성</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="FirstName">이름</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Gender">성별</label>
        <select asp-for="Gender" class="form-control">
            <option value="">선택</option>
            <option value="M">남성</option>
            <option value="F">여성</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DateOfBirth">생년월일</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Nationality">국적</label>
        <input asp-for="Nationality" class="form-control" placeholder="예: KOR" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="PassportNumber">여권번호</label>
        <input asp-for="PassportNumber" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="PassportExpiry">여권 유효기한</label>
        <input asp-for="PassportExpiry" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-4">다음</button>
</form>

